# test.py
def break_words(stuff):
    """This function will break up words for us."""
    words = stuff.split(' ')
    return words

def sort_words(words):
    """Sort the words."""
    return sorted(words)

def print_first_word(words):
    """Prints the first word after popping it off."""
    word = words.pop(0)
    print(word)

def print_last_word(words):
    """Prints the last word after popping it off."""
    word = words.pop(-1)
    print(word)

def sort_sentence(sentence):
    """Takes in a full sentence and returns the sorted words."""
    words = break_words(sentence)
    return sort_words(words)

def print_first_and_last(sentence):
    """Print the first and last words of the entence."""
    words = break_words(sentence)
    print_first_word(words)
    print_last_word(words)

def print_first_and_last_sorted(sentence):
    """Sorted the words then prints the first and last one."""
    words = sort_sentence(sentence)
    print_first_word(words)
    print_last_word(words)


#to_test.py
import test

sentence = "All good things come to those who wait."
words = test.break_words(sentence)
print(words)

sorted_words = test.sort_words(words)
print(sorted_words)

test.print_first_word(words)
test.print_last_word(words)
print(words)

test.print_first_word(sorted_words)
test.print_last_word(sorted_words)
print(sorted_words)

sorted_words = test.sort_sentence(sentence)
print(sorted_words)

test.print_first_and_last(sentence)
test.print_first_and_last_sorted(sentence)
